<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bmh.hotelmanagementsystem.RoomManagement.MaintenanceHistoryController">
   <children>
   <!--             Side Bar -->
        <fx:include fx:id="side_bar" source="../components/side_bar.fxml" />
      <VBox prefHeight="1080.0" prefWidth="1750.0" styleClass="lightGreyBackground" stylesheets="@../css/styles.css">
         <children>
         <!--             Side Bar -->
            <VBox spacing="30.0" styleClass="box" stylesheets="@../css/styles.css">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
                     <children>
                     <fx:include fx:id="back" source="../components/back_button.fxml" />
                        <Label fx:id="maintenance_roomNumber" styleClass="title_text" stylesheets="@../css/styles.css" text="Maintenance History(Room )" />
                     </children>
                  </HBox>
                  <TableView fx:id="maintenance_table">
                    <columns>
                      <TableColumn fx:id="ref_column" prefWidth="75.0" text="Ref" />
                      <TableColumn fx:id="description_column" prefWidth="75.0" text="Description" />
                        <TableColumn fx:id="cost_column" prefWidth="75.0" text="Cost" />
                        <TableColumn fx:id="status_column" prefWidth="75.0" text="Status" />
                        <TableColumn fx:id="created_on_column" prefWidth="75.0" text="Created On" />
                        <TableColumn fx:id="completed_on_column" prefWidth="75.0" text="Completed On" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <effect>
                        <DropShadow>
                           <color>
                              <Color opacity="0.30783939361572266" />
                           </color>
                        </DropShadow>
                     </effect>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
